@{
    ViewBag.Title = "Home Page";
}

@*How to define variable and How to access variable inside View using Razor Syntax*@

@{ var Message = "Hello Nikhil Goyal";}
<h4>@Message</h4>

@{ var count = 0;}
<h4>Value of Count is : @count</h4>

<div>
    <h4>Working with Razor Basic (Syntax) of ForEach Loop</h4>
    @foreach(string str in new[] { "About" , "Contact" , "Index"})
    {
        @Html.ActionLink(str + " | ", str);
    }
</div>

<h4>Current Date and Time is : @DateTime.Now.ToString()</h4>

<table border="1" style="width : 100%; text-align : center;">
    <tr>
        <td style="font-weight : bold">Name</td>
        <td style="font-weight : bold">Value</td>
    </tr>

    <tr>
        <td>Day</td>
        <td>@DateTime.Now.Day</td>
    </tr>

    <tr>
        <td>Hours</td>
        <td>@DateTime.Now.Hour</td>
    </tr>

    <tr>
        <td>Minutes</td>
        <td>@DateTime.Now.Minute</td>
    </tr>

    <tr>
        <td>Seconds</td>
        <td>@DateTime.Now.Second</td>
    </tr>
</table>
<br /><br />

<h1>Request Type Razor Syntax</h1><br />

<table border="1" style="width : 100%; text-align : center">
    <tr>
        <td>Requested URL</td>
        <td>Relative Path</td>
        <td>Full Path</td>
        <td>Request HTTP Type</td>
    </tr>

    <tr>
        <td>@Request.Url</td>
        <td>@Request.FilePath</td>
        <td>@Request.MapPath(Request.FilePath)</td>
        <td>@Request.RequestType</td>
    </tr>
</table>
